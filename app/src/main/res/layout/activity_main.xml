<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input_view"
        android:layout_width="@dimen/text_padding"
        android:layout_height="50dip"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:text="@string/zero"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
    <Button
        android:id="@+id/clearInstance"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/clear"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/clearEverything"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="1"
        android:layout_row="1"
        android:text="@string/clear_everything"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/negativePositive"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="2"
        android:layout_row="1"
        android:text="@string/sign"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/divide"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="3"
        android:layout_row="1"
        android:text="@string/divide"
        android:textSize="@dimen/button_font_size"/>



    <Button
        android:id="@+id/add"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="3"
        android:layout_row="2"
        android:text="@string/add"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/four"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/four"
        android:textSize="@dimen/button_font_size"/>


    <Button
        android:id="@+id/five"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="1"
        android:layout_row="3"
        android:text="@string/five"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/six"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="2"
        android:layout_row="3"
        android:text="@string/six"
        android:textSize="@dimen/button_font_size"/>
    <Button
        android:id="@+id/seven"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/seven"
        android:textSize="@dimen/button_font_size"/>



    <Button
        android:id="@+id/eight"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="1"
        android:layout_row="2"
        android:text="@string/eight"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/nine"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="2"
        android:layout_row="2"
        android:text="@string/nine"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/subtract"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="3"
        android:layout_row="3"
        android:text="@string/subtract"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/one"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="0"
        android:layout_row="4"
        android:text="@string/one"
        android:textSize="@dimen/button_font_size"/>


    <Button
        android:id="@+id/two"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="1"
        android:layout_row="4"
        android:text="@string/two"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/three"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="2"
        android:layout_row="4"
        android:text="@string/three"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/multiply"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="3"
        android:layout_row="4"
        android:text="@string/multiply"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/zero"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="0"
        android:layout_row="5"
        android:text="@string/zero"
        android:textSize="@dimen/button_font_size"/>


    <Button
        android:id="@+id/decimal"
        android:layout_width="@dimen/button_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="1"
        android:layout_row="5"
        android:text="@string/point"
        android:textSize="@dimen/button_font_size"/>

    <Button
        android:id="@+id/equals"
        android:layout_width="@dimen/large_padding"
        android:layout_height="@dimen/button_padding"
        android:layout_margin="@dimen/margin"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_row="5"
        android:text="@string/equal"
        android:textSize="@dimen/button_font_size"/>

</GridLayout>

